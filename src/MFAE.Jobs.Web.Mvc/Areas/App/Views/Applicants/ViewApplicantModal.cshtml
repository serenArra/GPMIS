                                            <h6 class="title-main">@L("Address") :</h6>
                                            <p class="px-2">@Model.Applicant.Address </p>
                                        </div>
                                        <div class="col-6 mb-3 block-title">
                                            <h6 class="title-main">@L("Repetition") :</h6>
                                            <p class="px-2"> </p>
                                        </div>
                                        <div class="col-6 mb-3 block-title">
                                            <h6 class="title-main">@L("NumberOfChildren") :</h6>
