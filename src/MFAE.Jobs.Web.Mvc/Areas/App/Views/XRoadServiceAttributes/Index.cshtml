@using MFAE.Jobs.Authorization
@using MFAE.Jobs.Web.Areas.App.Models.XRoadServiceAttributes
@using MFAE.Jobs.Web.Areas.App.Startup
@model XRoadServiceAttributesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.XRoadServiceAttributes;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/XRoadServiceAttributes/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("XRoadServiceAttributes")' description='@L("XRoadServiceAttributesHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_XRoadServiceAttributes_Create))
    {
    <button id="CreateNewXRoadServiceAttributeButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewXRoadServiceAttribute")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="XRoadServiceAttributesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetXRoadServiceAttributesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ServiceAttributeTypeFilterId">@L("ServiceAttributeType")</label>
                        <select class="form-select reload-on-change" name="ServiceAttributeTypeFilter" id="ServiceAttributeTypeFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="1">@L("Enum_XRoadServiceAttributeTypeEnum_1")</option>

                            <option value="2">@L("Enum_XRoadServiceAttributeTypeEnum_2")</option>

                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="AttributeCodeFilterId">@L("AttributeCode")</label>
                        <input type="text" class="form-control reload-on-keyup" name="attributeCodeFilter" id="AttributeCodeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="XMLPathFilterId">@L("XMLPath")</label>
                        <input type="text" class="form-control reload-on-keyup" name="xmlPathFilter" id="XMLPathFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameFilterId">@L("Name")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                        <input type="text" class="form-control reload-on-keyup" name="descriptionFilter" id="DescriptionFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="FormatTransitionFilterId">@L("FormatTransition")</label>
                        <input type="text" class="form-control reload-on-keyup" name="formatTransitionFilter" id="FormatTransitionFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="XRoadServiceNameFilterId">(@L("XRoadService")) @L("Name")</label>
                        <input type="text" class="form-control" name="xRoadServiceNameFilter" id="XRoadServiceNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="XRoadServiceAttributesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("ServiceAttributeType")</th>
                            <th>@L("AttributeCode")</th>
                            <th>@L("XMLPath")</th>
                            <th>@L("Name")</th>
                            <th>@L("Description")</th>
                            <th>@L("FormatTransition")</th>
                            <th>@L("XRoadServiceName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>