@model CitizensListWithCodesDto



<div class="card">
    <div class="card-header py-1" id="headingOne2">
        <div class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne1">
            <i class="flaticon2-file-1"></i>
            <h3 class="my-1 font-weight-bold text-dark"> @L("MOIInformation")</h3>
        </div>
    </div>
