@using MFAE.Jobs.Authorization
@using MFAE.Jobs.Web.Areas.App.Models.ApplicantStatuses
@using MFAE.Jobs.Web.Areas.App.Startup
@model ApplicantStatusesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.ApplicantStatuses;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/ApplicantStatuses/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("ApplicantStatuses")' description='@L("ApplicantStatusesHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_ApplicantStatuses_Create))
    {
    <button id="CreateNewApplicantStatusButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewApplicantStatus")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="ApplicantStatusesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetApplicantStatusesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="StatusFilterId">@L("Status")</label>
                        <select class="form-select reload-on-change" name="StatusFilter" id="StatusFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="1">@L("Enum_ApplicantStatusEnum_1")</option>

                            <option value="2">@L("Enum_ApplicantStatusEnum_2")</option>

                            <option value="3">@L("Enum_ApplicantStatusEnum_3")</option>

                            <option value="4">@L("Enum_ApplicantStatusEnum_4")</option>

                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                        <input type="text" class="form-control reload-on-keyup" name="descriptionFilter" id="DescriptionFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ApplicantFullNameFilterId">(@L("Applicant")) @L("FullName")</label>
                        <input type="text" class="form-control" name="applicantFullNameFilter" id="ApplicantFullNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="ApplicantStatusesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("Status")</th>
                            <th>@L("Description")</th>
                            <th>@L("ApplicantFullName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>