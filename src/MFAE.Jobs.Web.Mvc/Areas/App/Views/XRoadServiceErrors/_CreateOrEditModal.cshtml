
@using System.Globalization
@using MFAE.Jobs.Web.Areas.App.Models.Common.Modals
@using MFAE.Jobs.Web.Areas.App.Models.XRoadServiceErrors
@model CreateOrEditXRoadServiceErrorModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditXRoadServiceError")) : L("CreateNewXRoadServiceError")))

<div class="modal-body">
    <div id="XRoadServiceErrorInformationsTab">
        <form name="XRoadServiceErrorInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.XRoadServiceError.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="XRoadServiceName">@L("XRoadService")</label>
                <div class="input-group">
                    <input class="form-control" id="XRoadServiceName" name="xRoadServiceName" value="@Model.XRoadServiceName" type="text" disabled>
                    <button class="btn btn-primary blue" id="OpenXRoadServiceLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                    <button class="btn btn-danger btn-icon" type="button" id="ClearXRoadServiceNameButton"><i class="fa fa-times"></i></button>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
            <input class="form-control" id="XRoadServiceError_XRoadServiceId" value="@Model.XRoadServiceError.XRoadServiceId" type="text" name="xRoadServiceId" required hidden />
            }
            else
            {
            <input class="form-control" id="XRoadServiceError_XRoadServiceId" value="" type="text" name="xRoadServiceId" required hidden />
            }

            <div class="my-3">
                <label class="form-label" for="XRoadServiceError_ErrorCode">@L("ErrorCode")</label>
                <input class="form-control" id="XRoadServiceError_ErrorCode" value="@Model.XRoadServiceError.ErrorCode" type="text" name="errorCode" required />
            </div>

            <div class="my-3">
                <label class="form-label" for="XRoadServiceError_ErrorMessageAr">@L("ErrorMessageAr")</label>
                <input class="form-control" id="XRoadServiceError_ErrorMessageAr" value="@Model.XRoadServiceError.ErrorMessageAr" type="text" name="errorMessageAr" required />
            </div>

            <div class="my-3">
                <label class="form-label" for="XRoadServiceError_ErrorMessageEn">@L("ErrorMessageEn")</label>
                <input class="form-control" id="XRoadServiceError_ErrorMessageEn" value="@Model.XRoadServiceError.ErrorMessageEn" type="text" name="errorMessageEn" required />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")