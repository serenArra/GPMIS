
@using MFAE.Jobs.Web.Areas.App.Models.Common.Modals
@using MFAE.Jobs.Web.Areas.App.Models.Countries
@model CountryViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CountryInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("IsoNumeric") :</h6>
                @Model.Country.IsoNumeric
            </div>
            <div class="col-6 mb-3">
                <h6>@L("IsoAlpha") :</h6>
                @Model.Country.IsoAlpha
            </div>
            <div class="col-6 mb-3">
                <h6>@L("NameAr") :</h6>
                @Model.Country.NameAr
            </div>
            <div class="col-6 mb-3">
                <h6>@L("NameEn") :</h6>
                @Model.Country.NameEn
            </div>
            <div class="col-6 mb-3">
                <h6>@L("UniversalCode") :</h6>
                @Model.Country.UniversalCode
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")