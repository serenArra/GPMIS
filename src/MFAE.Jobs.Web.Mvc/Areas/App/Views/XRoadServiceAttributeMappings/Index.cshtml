@using MFAE.Jobs.Authorization
@using MFAE.Jobs.Web.Areas.App.Models.XRoadServiceAttributeMappings
@using MFAE.Jobs.Web.Areas.App.Startup
@model XRoadServiceAttributeMappingsViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.XRoadServiceAttributeMappings;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/XRoadServiceAttributeMappings/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("XRoadServiceAttributeMappings")' description='@L("XRoadServiceAttributeMappingsHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_XRoadServiceAttributeMappings_Create))
    {
    <button id="CreateNewXRoadServiceAttributeMappingButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewXRoadServiceAttributeMapping")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="XRoadServiceAttributeMappingsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetXRoadServiceAttributeMappingsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ServiceAttributeTypeFilterId">@L("ServiceAttributeType")</label>
                        <select class="form-select reload-on-change" name="ServiceAttributeTypeFilter" id="ServiceAttributeTypeFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="1">@L("Enum_XRoadAttributeTypeEnum_1")</option>

                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="SourceValueFilterId">@L("SourceValue")</label>
                        <input type="text" class="form-control reload-on-keyup" name="sourceValueFilter" id="SourceValueFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="DestinationValueFilterId">@L("DestinationValue")</label>
                        <input type="text" class="form-control reload-on-keyup" name="destinationValueFilter" id="DestinationValueFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="XRoadServiceAttributeNameFilterId">(@L("XRoadServiceAttribute")) @L("Name")</label>
                        <input type="text" class="form-control" name="xRoadServiceAttributeNameFilter" id="XRoadServiceAttributeNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="XRoadServiceAttributeMappingsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("ServiceAttributeType")</th>
                            <th>@L("SourceValue")</th>
                            <th>@L("DestinationValue")</th>
                            <th>@L("XRoadServiceAttributeName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>