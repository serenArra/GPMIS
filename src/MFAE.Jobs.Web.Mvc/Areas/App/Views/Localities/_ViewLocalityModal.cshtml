
@using MFAE.Jobs.Web.Areas.App.Models.Common.Modals
@using MFAE.Jobs.Web.Areas.App.Models.Localities
@model LocalityViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="LocalityInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("NameAr") :</h6>
                @Model.Locality.NameAr
            </div>
            <div class="col-6 mb-3">
                <h6>@L("NameEn") :</h6>
                @Model.Locality.NameEn
            </div>
            <div class="col-6 mb-3">
                <h6>@L("UniversalCode") :</h6>
                @Model.Locality.UniversalCode
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Governorate")) @L("Name") :</h6>
                @Model.GovernorateName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")