
@using System.Globalization
@using MFAE.Jobs.Web.Areas.App.Models.Common.Modals
@using MFAE.Jobs.Web.Areas.App.Models.JobAdvertisements
@model CreateOrEditJobAdvertisementViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditJobAdvertisement")) : L("CreateNewJobAdvertisement")))

<div class="modal-body">
    <div id="JobAdvertisementInformationsTab">
        <form name="JobAdvertisementInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.JobAdvertisement.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_Description">@L("Description")</label>
                <input class="form-control" id="JobAdvertisement_Description" value="@Model.JobAdvertisement.Description" type="text" name="description" />
            </div>

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_AdvertisementId">@L("AdvertisementId")</label>
                <input class="form-control" id="JobAdvertisement_AdvertisementId" value="@Model.JobAdvertisement.AdvertisementId" type="text" name="advertisementId" required maxlength="@MFAE.Jobs.ApplicationForm.JobAdvertisementConsts.MaxAdvertisementIdLength" minlength="@MFAE.Jobs.ApplicationForm.JobAdvertisementConsts.MinAdvertisementIdLength" />
            </div>

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_AdvertisementDate">@L("AdvertisementDate")</label>
                <input class="form-control m-input date-picker" id="JobAdvertisement_AdvertisementDate" type="text" name="advertisementDate" value="@Model.JobAdvertisement.AdvertisementDate" />
            </div>

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_FromDate">@L("FromDate")</label>
                <input class="form-control m-input date-picker" id="JobAdvertisement_FromDate" type="text" name="fromDate" value="@Model.JobAdvertisement.FromDate" />
            </div>

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_ToDate">@L("ToDate")</label>
                <input class="form-control m-input date-picker" id="JobAdvertisement_ToDate" type="text" name="toDate" value="@Model.JobAdvertisement.ToDate" />
            </div>

            <div class="my-3">
                <label class="form-label" for="JobAdvertisement_AllowedAge">@L("AllowedAge")</label>
                <input class="form-control m-input" id="JobAdvertisement_AllowedAge" value="@Model.JobAdvertisement.AllowedAge.ToString(CultureInfo.InvariantCulture)" type="number" name="allowedAge" />
            </div>

            <label class="form-check form-check-custom">
                <input id="JobAdvertisement_IsActive" name="isActive" type="checkbox" class="form-check-input" value="true" @Html.Raw(Model.JobAdvertisement.IsActive ?"checked=\"checked\"":"") />
                <span class="form-check-label">
                    @L("IsActive")
                </span>
            </label>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")