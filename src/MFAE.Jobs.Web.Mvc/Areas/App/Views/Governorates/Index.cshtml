@using MFAE.Jobs.Authorization
@using MFAE.Jobs.Web.Areas.App.Models.Governorates
@using MFAE.Jobs.Web.Areas.App.Startup
@model GovernoratesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.Governorates;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/Governorates/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("Governorates")' description='@L("GovernoratesHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_Governorates_Create))
    {
    <button id="CreateNewGovernorateButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewGovernorate")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="GovernoratesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetGovernoratesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameArFilterId">@L("NameAr")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameArFilter" id="NameArFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameEnFilterId">@L("NameEn")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameEnFilter" id="NameEnFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="UniversalCodeFilterId">@L("UniversalCode")</label>
                        <input type="text" class="form-control reload-on-keyup" name="universalCodeFilter" id="UniversalCodeFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="CountryNameFilterId">(@L("Country")) @L("Name")</label>
                        <input type="text" class="form-control" name="countryNameFilter" id="CountryNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="GovernoratesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("NameAr")</th>
                            <th>@L("NameEn")</th>
                            <th>@L("UniversalCode")</th>
                            <th>@L("CountryName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>